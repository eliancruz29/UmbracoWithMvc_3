@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<UmbracoWithMvc_3.Models.BlogOverviewModel>
@{
    Layout = "Master.cshtml";
}

<div role="content">
    <h2>@ViewBag.Hello</h2>
	<section class="light blogarchive equalizer">
		<div class="container">
			<div class="row">
				@foreach(var post in Model.Content.Post) 
				{
					<div class="col-sm-6">
						<div class="content equal">
							<a href="@post.Url">
								<div class="date">@post.CreateDate.ToLongDateString()</div>
								<h2>@post.name</h2>		
								<p>@post.Introduction</p>
							</a>
						</div>
					</div>
				}
			</div>
		</div>
	</section>

</div>